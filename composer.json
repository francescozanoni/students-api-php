{
  "name": "francescozanoni/students-api-php",
  "description": "Student management API",
  "keywords": [
    "students",
    "management",
    "rest",
    "api"
  ],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": ">=7.1.3",
    "ext-json": "*",
    "ext-zip": "*",
    "hkarlstrom/openapi-validation-middleware": "^0.2.0",
    "laravel/lumen-framework": "5.7.*",
    "swagger-api/swagger-ui": "^3.20",
    "symfony/psr-http-message-bridge": "^1.1",
    "symfony/yaml": "^4.2",
    "vlucas/phpdotenv": "~2.2",
    "zendframework/zend-diactoros": "^2.1"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "phpunit/phpunit": "~7.0",
    "mockery/mockery": "~1.0"
  },
  "autoload": {
    "classmap": [
      "database/seeds",
      "database/factories"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ]
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-install-cmd": "@php scripts/publish_swagger_ui.php",
    "post-update-cmd": "@php scripts/publish_swagger_ui.php",
    "test": "php vendor/phpunit/phpunit/phpunit tests",
    "serve": "php -S localhost:80 -t public public/router.php"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
